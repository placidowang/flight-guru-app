<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <li style="color: red"><%= e %></li>
  <% end %>
<% else %>
  <br>
<% end %>

<% if flash[:account_created_message] %>
  <li style="color: green"><%= flash[:account_created_message] %></li>
<% end %>

<% if session[:user_id] %>
  <p>Currently logged in as: <%= @user.username %></p>
  <%= form_with url:'/logout', method: "delete" do |f| %>
  <%= f.submit "logout"%>
  <% end%>
<% end %>

