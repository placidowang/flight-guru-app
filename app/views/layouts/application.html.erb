<!DOCTYPE html>
<html>
  <head>
    <title>Flight Guru App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- Bootstrap core CSS -->
    <link href="<%= request.base_url %>/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="<%= request.base_url %>/css/one-page-wonder.min.css" rel="stylesheet">


<style>


/* h1 {
  font-family: Arial, Helvetica, sans-serif;
} */
.white-box {
  background-color: white;
  /* border: 35px solid #3878F7;
  border-radius: 35px; */
  /* margin: auto; */
  min-width: 600px;
  width: 60%;
  height: 100vh;
  position: fixed;
  padding: 30px;
  left: 50%;
  top: 80px;
  transform: translate(-50%, 0%);
  text-align: center;
  overflow: auto;
}
.header {
  padding: 60px;
  text-align: center;
  background: #1abc9c;
  color: white;
  font-size: 30px;
  position: fixed;
  top: 100px;
}
.navbar {
  /* padding: 10px; */
  /* background: #1abc9c; */
  /* color: white; */
  font-size: 200%;
}
a.navbar-brand {
  text-align: left;
  font-size: 300px;
}
.clearfix {
  overflow: auto;
}
.home_video {
 width: 100vw;
 height: 100vh;
 position: fixed;
 object-fit: cover;
 top: 0px;
 z-index: -2;
}
.home-video-wrapper {
  position: fixed;
  right: 0;
  top: 0px;
  min-width: 100%; 
  min-height: 100%;
}

body {
  font-size: 200%;
  background-color: white;
  margin: auto;
}

</style>

  </head>

  <body>
         <div id="my_logo"></div>
    <!-- Navigation -->

  

    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top" style="height: 77px">
      <p style="font-size: 75%; color: #02A1FC;">Flight</p> <p style="font-size: 50%; color: white;"> Guru</p>
    
      <a class="nav-brand"  href='/'>
      <img  style="width: 50%; height: 25%; margin-left: -40px" src="<%=request.base_url %>/assets/flight-guru-logo.png"></a>
      <div class="container">
      
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <% if session[:current_user] %>
              <li class="nav-item">
                <a class="nav-link" style="font-size: 50%" href="/">Currently logged in as: <%= session[:current_user]["username"] %></a>
              </li>
            <% else %>
              <li class="nav-item">
                <a class="nav-link" style="font-size: 50%" href="/register">Sign Up</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" style="font-size: 50%" href="/">Log In</a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>


    <div class="home-video-wrapper">
      <%= video_tag "airport-terminal.mov", autoplay: :autoplay, loop: :loop, mute: :mute, class: "home_video" %>
    </div>

    <div class="white-box">
        <%= yield %>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="<%= request.base_url %>/vendor/jquery/jquery.slim.min.js"></script>
    <script src="<%= request.base_url %>/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
